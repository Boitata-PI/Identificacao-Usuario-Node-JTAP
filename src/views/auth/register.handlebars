<head>
    <link rel="stylesheet" href="/public/css/register.css">
</head>

<form class="form" action="/api/register" method="POST">
    <div class="main-login">
        <div class="right-login">
            <div class="card-login">
                <h1>Cadastro</h1>
                <div class="cadastro-text">
                    <span class="registro-texto">Ja tem uma conta Cadastrada? </span><a href="/">FaÃ§a Login</a>
                </div>
                <div class="textfield">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required placeholder="example@example.com">
                </div>
                <div class="textfield">
                    <label for="password">Senha</label>
                    <input type="password" id="password" name="password" minlength="6" maxlength="14" required placeholder="Senha">
                </div>
                <button type="submit" class="btn-login">Cadastrar-se</button>
            </div>
        </div>
        <div class="left-login">
            <h1>Cadastre-se para ter acesso ao sistema!</h1>
            <img src="/public/img/logo/metralha01.png" class="left-login-image" alt="ocean">
        </div>
    </div>
</form>